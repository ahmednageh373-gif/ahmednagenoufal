# NOUFAL ERP - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ==================== API Keys ====================
# Google Gemini AI API Key
VITE_GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# General API Key (if different)
VITE_API_KEY=your_api_key_here
API_KEY=your_api_key_here

# ==================== Database Configuration ====================
# PostgreSQL Database (Production)
DATABASE_URL=postgresql://username:password@localhost:5432/noufal_erp
DB_HOST=localhost
DB_PORT=5432
DB_NAME=noufal_erp
DB_USER=your_db_username
DB_PASSWORD=your_secure_password

# SQLite Database (Development)
SQLITE_DATABASE=./noufal_erp.db

# ==================== Application Settings ====================
# Environment (development, staging, production)
NODE_ENV=production
FLASK_ENV=production
FLASK_DEBUG=0

# Application URL
APP_URL=https://your-domain.com
FRONTEND_URL=https://your-domain.com
BACKEND_URL=https://api.your-domain.com

# ==================== Security ====================
# Secret Key for Session/JWT (generate with: openssl rand -hex 32)
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_here

# CORS Origins (comma-separated)
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ==================== Email Configuration ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@your-domain.com

# ==================== Cloud Storage (Optional) ====================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=your-bucket-name
AWS_REGION=us-east-1

# ==================== Monitoring & Analytics ====================
SENTRY_DSN=your_sentry_dsn
GOOGLE_ANALYTICS_ID=your_ga_id

# ==================== Rate Limiting ====================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# ==================== Session ====================
SESSION_LIFETIME=3600
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict
