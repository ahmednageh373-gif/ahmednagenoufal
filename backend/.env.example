# ==========================================
# Noufal Engineering System - Environment Variables
# ==========================================
# Copy this file to .env and update the values
# cp .env.example .env
# ==========================================

# ========================
# Application Settings
# ========================
APP_NAME="Noufal Engineering System"
APP_VERSION="2.1.0"
DEBUG=false
FLASK_ENV=production
SECRET_KEY="change-me-to-very-long-random-string-in-production"
JWT_SECRET_KEY="change-me-to-another-very-long-random-string"

# ========================
# Server Configuration
# ========================
HOST=0.0.0.0
PORT=5000

# ========================
# Database Configuration
# ========================
# PostgreSQL (recommended for production)
DB_USER=noufal_user
DB_PASSWORD=change-this-password
DB_HOST=db
DB_PORT=5432
DB_NAME=noufal_db
DATABASE_URL="postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}"

# SQLite (for development only)
SQLITE_DATABASE_PATH=database/noufal.db
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_INTERVAL=86400

# ========================
# Redis Configuration
# ========================
REDIS_URL="redis://redis:6379/0"
REDIS_PASSWORD=""

# ========================
# CORS Configuration
# ========================
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","https://yourdomain.com"]

# ========================
# Rate Limiting
# ========================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_TIMES=100
RATE_LIMIT_SECONDS=60
RATE_LIMIT_STORAGE_URL="redis://redis:6379/1"

# ========================
# Upload Configuration
# ========================
UPLOAD_FOLDER=../uploads
MAX_CONTENT_LENGTH=52428800
ALLOWED_EXTENSIONS=xlsx,xls,csv,pdf,dwg,dxf

# ========================
# Logging Configuration
# ========================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
LOG_JSON_FORMAT=true

# ========================
# External APIs
# ========================
NOVITA_API_KEY="your-novita-api-key-here"
# Add other API keys as needed

# ========================
# Feature Flags
# ========================
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_DOCUMENT_MANAGER=true
ENABLE_SWAGGER=true

# ========================
# Performance & Caching
# ========================
CACHE_TYPE=redis
CACHE_REDIS_URL="redis://redis:6379/2"
CACHE_DEFAULT_TIMEOUT=300

# ========================
# Security
# ========================
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# ========================
# Email Configuration (Optional)
# ========================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-app-password

# ========================
# Monitoring & Observability
# ========================
SENTRY_DSN=""
ENABLE_PROMETHEUS=false

# ========================
# Worker Configuration (Celery)
# ========================
CELERY_BROKER_URL="redis://redis:6379/3"
CELERY_RESULT_BACKEND="redis://redis:6379/4"

# ========================
# Development Only
# ========================
DEBUG_TB_ENABLED=false
DEBUG_TB_INTERCEPT_REDIRECTS=false
